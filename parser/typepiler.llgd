uses "./typepiler.llld";

Declarations: {Declaration};

Declaration: UpperID ("=" Alias | "::" Composite) ";";

Alias
  : Type {"|" Type}
  | "{" UpperID {"," UpperID} "}"
  ;

Composite
  : Type
  | {LowerID ":" Type}
  ;

Type: TypeTerm {"*" TypeTerm};

TypeTerm
  : UpperID {TypeFactor}
  | "(" Type ")"
  ;

TypeFactor
  : UpperID
  | "(" Type ")"
  ;
